{
  "manifest_version": 2,
  "name": "Invert Page",
  "description": "Invert the page colors.",
  "version": "0.0.2",
  "background": {
    "scripts": ["background.js"]
  },
  "scripts": {
    "build": "web-ext build --overwrite"
  },
  "page_action": {
    "default_icon": {
      "16": "icon-128.svg",
      "32": "icon-128.svg"
    },
    "default_title": "Invert Page Colors",
    "show_matches": ["<all_urls>"]
  },
  "icons": {
    "128": "icon-128.svg"
  },
  "permissions": ["activeTab", "scripting"]
}
